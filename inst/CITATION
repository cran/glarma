citHeader("To cite package 'glarma' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
         title =
         "glarma: Generalized Linear Autoregressive Moving Average Models",
         author = personList(as.person("William T.M. Dunsmuir"),
                             as.person("Cenanning Li"),
                             as.person("David J. Scott")),
         year = year,
         note = vers,

         textVersion =
         paste0("William T.M. Dunsmuir, Cenanning Li, and David J. Scott(",
                year,"). glarma: ",
                "Generalized Linear Autoregressive Moving Average Models. ",
                vers, "."))
